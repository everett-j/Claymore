@model PostingEvent


<div id="nav">
    <p><br></p>
</div>
<h1>Add Your Posting</h1>
<h5>Add all relevant information and submit below</h5>
<form asp-action="CreatePosting" asp-controller="Home" method="post">

<!--BEGIN of CARD ROW-->
<div class="row">
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
      <div class="card-header"><h5 class="text-white card-title">Job Details</h5></div>
        <div class="card-body ">
<!--Company-->
          <div class="form-group row">
            <label class="col-sm-2 col-form-label posting_title ">Company</label>
            <div class="col-sm-10">
              <input class="form-control w-75" asp-for="Company">
            </div>
          </div>
<!--DateApply-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Date Applied</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type ="date" asp-for="DateApply">
          </div>
        </div>
<!--JobLink-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Job Link</label>
          <div class="col-sm-10">
            <input class="form-control w-75" asp-for="JobLink">
          </div>
        </div>
<!--JobLink-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Job Posting</label>
          <div class="col-sm-10">
            <select class="form-control w-75" asp-for="JobPosting">
              <option>Company Site</option>
              <option>Glassdoor</option>
              <option>Indeed</option>
              <option>LinkedIn</option>
              <option>Dice</option>
              <option>Job Fair</option>
              <option>Other</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
     <div class="card-header"><h5 class="text-white card-title">Key Info</h5></div>
      <div class="card-body ">
<!--Position Title-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Position Title</label>
          <div class="col-sm-10">
            <input class="form-control w-75" asp-for="PositionTitle">
          </div>
        </div>
<!--Job Location-->
        <!-- <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Job Location</label>
          <div class="col-sm-10">
            <input class="form-control w-75" asp-for="JobLocation">
          </div>
        </div> -->
<!--Recruiter Name-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Recruiter Name</label>
          <div class="col-sm-10">
            <input class="form-control w-75" asp-for="RecruiterName">
          </div>
        </div>
<!--Contact Name-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Contact Name</label>
          <div class="col-sm-10">
            <input class="form-control w-75" asp-for="ContactName">
          </div>
        </div>
<!--Job Notes-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Job Notes</label>
          <div class="col-sm-10">
            <textarea class="form-control w-75" asp-for="Notes"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--END of CARD ROW-->
<!--BEGIN of CARD ROW 2-->
<div class="row">
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
      <div class="card-header"><h5 class="text-white card-title">Phone Screen</h5></div>
      <div class="card-body ">
<!--Phone Screen-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Phone Screen</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type ="date" asp-for="PhoneScreen">
          </div>
        </div>
<!--Phone Screen Notes-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Phone Screen Notes</label>
          <div class="col-sm-10">
            <textarea class="form-control w-75" asp-for="ScreenNotes"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
     <div class="card-header"><h5 class="text-white card-title">Phone Interview</h5></div>
      <div class="card-body ">
<!--Phone Interview-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Phone Interview</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type ="date" asp-for="PhoneInterview">
          </div>
        </div>
<!--Phone Interview Notes-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Phone Interview Notes</label>
          <div class="col-sm-10">
            <textarea class="form-control w-75" asp-for="PhoneNotes"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--END of CARD ROW 2-->
<!--BEGIN of CARD ROW 3-->
<div class="row">
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
      <div class="card-header"><h5 class="text-white card-title">Interview Info</h5></div>
      <div class="card-body ">
<!--Phone Interview-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Interview</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type ="date" asp-for="Interview">
          </div>
        </div>
<!--Phone Interview Notes-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Interview Notes</label>
          <div class="col-sm-10">
            <textarea class="form-control w-75" asp-for="InterviewNotes"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 ">
    <div class="card text-black bg-light mb-3">
     <div class="card-header"><h5 class="text-white card-title">Denied Info</h5></div>
      <div class="card-body ">
<!--Denied-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Denied</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type ="date" asp-for="Denied">
          </div>
        </div>
<!--Denied Notes-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label posting_title ">Denied Notes</label>
          <div class="col-sm-10">
            <textarea class="form-control w-75" asp-for="DeniedNotes"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--END of CARD ROW 3-->

<input type="submit" class="btn btn-success" value="Create Posting">
</form>
