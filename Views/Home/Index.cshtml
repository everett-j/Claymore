@model User
<link rel="stylesheet" href="~/css/site.css">
  <!-- <h1>Welcome to nerdGnome.com</h1> -->
<p><br></p>
<div id="main">
<!--BEGIN HEADER-->
 
    <div class="card-header text-white bg-dark"><h5 class="card-title">Welcome to nerdGnome.com</h5></div>




<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Don’t settle. Dream Bigger.</h1>
    <p class="lead">You’ve found us! This awesome site is your ultimate companion when finding your next career path. 
    Enter your job application info and track the entire hiring process, from the application to the final interview, 
    we’ve got you.
    </p>
  </div>
</div>
<!--END HEADER-->
<p><br></p>
<!--BEGIN CARDS-->
<div class="row">
  <div class="col-sm-6">
    <div class="card bg-light border-dark mb-3">
    <div class="card-header text-white bg-dark"><h5 class="card-title">Login Here.</h5></div>
      <div class="card-body">
        <form class="form-horizontal" asp-action="LoginUser" asp-controller="Home" method="post">
        <!--EMAIL-->
          <div class="form-group row">
            <label class="col-sm-2 col-form-label in_label" for="Email">Email</label>
              <div class="col-sm-10">
                <input class="form-control w-75" type="email" name="Email">
              </div>
          </div>
<!--PW-->
          <div class="form-group row">
            <label class="col-sm-2 col-form-label in_label" for="Password">Password</label>
              <div class="col-sm-10">
                <input class="form-control w-75" type="password" name="Password">
              </div>
          </div>

          <input class="submit btn btn-success" type="submit" value="Login">

        </form>
        <p class="error">@ViewBag.Login</p>
        <p class="error">@ViewBag.NoUser</p>
        <p class="error">@ViewBag.BadInfo</p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card bg-light border-dark mb-3">
      <div class="card-header text-white bg-dark"><h5 class="card-title">New? Register Here.</h5></div>
      <div class="card-body">
        <form asp-action="RegisterUser" asp-controller="Home" method="post">
            <p class="error">@ViewBag.ExistingUser</p>

<!--First Name-->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label in_label">First Name</label>
              <div class="col-sm-10">
                <input class="form-control w-75" type="text"asp-for="FirstName">
                  <span asp-validation-for="FirstName"></span>
                  <p class="error">@ViewBag.FName</p>
              </div>
            </div>
        <!-- -->
<!--Last Name-->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label in_label">Last Name</label>
              <div class="col-sm-10">
                <input class="form-control w-75" type="text"asp-for="LastName">
                  <span asp-validation-for="LastName"></span>
                  <p class="error">@ViewBag.LName</p>
              </div>
            </div>
        <!-- -->
<!--Email-->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label in_label">Email</label>
              <div class="col-sm-10">
                <input class="form-control w-75" type="email"asp-for="Email">
                  <span asp-validation-for="Email"></span>
              </div>
            </div>
        <!-- -->
<!--Password-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label in_label">Password</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type="password"asp-for="Password">
              <span asp-validation-for="Password"></span>
                <p class="error">@ViewBag.Password</p>
          </div>
        </div>
        <!-- -->
<!--Password Confirmation-->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label in_label">Confirm Password</label>
          <div class="col-sm-10">
            <input class="form-control w-75" type="password"asp-for="PasswordConfirmation">
              <span asp-validation-for="PasswordConfirmation"></span>
                <p class="error">@ViewBag.PConfirm</p>
          </div>
        </div>
        <!-- -->
        <input class="submit btn btn-success" type="submit" value="Register">
      </form>
      </div>
    </div>
  </div>
</div>


<!--END CARDS -->
<p class="card-text"><b class="posting_title">Currently Serving: </b> @ViewBag.UsersCount </p>

</div>